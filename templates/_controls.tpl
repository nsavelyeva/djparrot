<div class="form-group row" style="margin-top: 1em">
	<label class="col-sm-3 col-form-label" for="repeat">Repeat</label>
	<div class="col-sm-9">
		<input type="range" min="1" max="10" step="1" name="repeat" id="repeat" value="1" class="form-control">
	</div>
</div>
<div class="form-group row">
	<label class="col-sm-3 col-form-label" for="volume">Volume</label>
	<div class="col-sm-9">
		<input type="range" min="0" max="1" step="0.1" name="volume" id="volume" value="1" class="form-control">
	</div>
</div>
<div class="form-group row">
	<label class="col-sm-3 col-form-label" for="rate">Rate</label>
	<div class="col-sm-9">
		<input type="range" min="0.1" max="10" step="0.1" name="rate" id="rate" value="1" class="form-control">
	</div>
</div>
<div class="form-group row">
	<label class="col-sm-3 col-form-label" for="pitch">Pitch</label>
	<div class="col-sm-9">
		<input type="range" min="0" max="2" step="0.1" name="pitch" id="pitch" value="1" class="form-control">
	</div>
</div>
